<h1 class="text-center">Your review to <%= @celeb.first_name%> <%= @celeb.last_name%> </h1>


<div class="container">
 <div class="row">
   <div class="col-xs-12 col-sm-6 col-sm-offset-3">
   <%= simple_form_for @booking, :url => profile_bookings_path(@celeb) do |f| %>
     <%= f.error_notification %>
     <%= f.input :date, placeholder: "Pick a date", input_html: {class: 'datepicker'}  %>
     <%= f.input :content, placeholder: "Explain your event" %>
     <%= f.submit "Submit" %>
     <% end %>
   </div>
 </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker();
  });
</script>
