<div class="product">
  <div class='product-upvote'>
    <div class='product-count'><%= celeb_booking.celeb.price_per_day %>â‚¬</div>
  </div>
  <div class= "product-image hidden-xs">
  <%= celeb_booking.renter.profile_picture.present? ? cl_image_path(celeb_booking.renter.profile_picture) : cl_image_path('https://unsplash.it/500/400') %>
</div>
  <div class='product-body'>
    <p><%= celeb_booking.date %></p>
    <h4><%= celeb_booking.renter.first_name %><%= " " %><%= celeb_booking.renter.last_name %></h4>
    <p>[<%= celeb_booking.status %>] - <%= celeb_booking.content %></p>
  </div>
  <ul class="list-inline product-controls hidden-sm hidden-xs">
    <li><%= link_to "Approve", accept_dashboard_booking_path(celeb_booking.id), class: "btn btn-primary" %></li>
    <li><%= link_to "Decline", decline_dashboard_booking_path(celeb_booking.id), class: "btn btn-primary" %></li>
    <li><% if DateTime.strptime(renter_booking.date, '%m/%d/%Y') < DateTime.now  %>
    <%= link_to "Review", new_profile_booking_review_path(current_user, renter_booking.id), class: "btn btn-primary" %>
  <% end %></li>
  </ul>
</div>
