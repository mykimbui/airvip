<h1>Results of your search:</h1>

<%= cl_image_tag("dvmb2m6vmgt83nl4dtuv.png") %>


<div class="container">
  <div class="row">
  <%= @profiles.each do |profile| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="url('<%= profile.profile_picture %>')">
      <div class="card-description">

        <h2><%= profile.first_name %> <%= profile.last_name %></h2>
        <p><%= profile.role %> <%= profile.address %> <%= profile.email %></p>
        <p><%= link_to "show", profile_path(profile), method: :get %></p>


      </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
