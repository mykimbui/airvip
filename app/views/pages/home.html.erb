<h1>Homepage</h1>



<div class="container">
  <div class="row">
<% @selected_celeb.each do |user| %>

    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('user.profile_picture');">
      <div class="card-description">

        <h2><%= user.first_name %> <%= user.last_name %></h2>
        <p><%= user.role %> </p><%= user.specialities.name %>
        <p><%= link_to "show",  profile_path(user), method: :get %></p>


      </div>
      </div>
    </div>
  <% end %>
  </div>
</div>

